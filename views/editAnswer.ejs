<form action="/answer" method="POST">
    <input type="hidden"  name="answerId" value="<%= req.query.answerId %>">
    <div class="form-group">
        <label for="answer">Answer</label>
        <textarea class="form-control" id="answer" name="answer" rows="10"> <%= answer %> </textarea></textarea>
    </div>
