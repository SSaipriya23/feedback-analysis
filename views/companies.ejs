<!--
including header content which is common for all pages
-->
<%- include layouts/header.ejs %>

        
                <table class="table">
                        <thead>
                                <tr>
                                        <th scope="col">Name</th>
                                </tr>
                        </thead>
                        <tbody>
                                <% for(var i=0; i<companies.length; i++) {%>
                                        <tr>
                                                <td>
                                                        <a href="/company/details?companyId=<%= companies[i].id %>">
                                                                <%= companies[i].name %>
                                                        </a>
                                                </td>
                                        </tr>
                                        <% } %>
                        </tbody>
                </table>
        
        <% if (session.category === 'Admin' || session.category ===  'Senior' ) { %>
        <form class="form-inline" action="/companies" method="POST">
                <div class="form-group mx-sm-3 mb-2">
                        <label for="Company" class="sr-only">Company</label>
                        <input type="password" class="form-control" id="Company" name="company" placeholder="New Company">
                </div>
                <div class="form-group mx-sm-3 mb-2">
                                <label for="Process" class="sr-only">Process</label>
                                <input type="password" class="form-control input-lg" name="process" id="Process" placeholder="New Company">
                </div>
                <button type="submit" class="btn btn-primary mb-2">Add Company</button>
        </form>
        <% } %>
        <!--
including footer content which is common for all pages
-->
        <%- include layouts/footer.ejs %>